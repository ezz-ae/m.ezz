
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isNotebookOwner(notebookId) {
    	return get(/databases/$(database)/documents/notebooks/$(notebookId)).data.ownerId == request.auth.uid;
    }

    // USERS
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isSignedIn() && request.resource.data.id == request.auth.uid;
      allow list: if false;
    }

    // NOTEBOOKS
    match /notebooks/{notebookId} {
      allow get: if resource.data.visibility == 'public' || isOwner(resource.data.ownerId);
      allow list: if resource.data.visibility == 'public';
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isOwner(get(/databases/$(database)/documents/notebooks/$(notebookId)).data.ownerId);
    }
    
    // NOTES (subcollection of notebooks)
    match /notebooks/{notebookId}/notes/{noteId} {
    	allow read, list, create, update, delete: if isNotebookOwner(notebookId);
    }
    
    // CONCEPTS (subcollection of notebooks)
    match /notebooks/{notebookId}/concepts/{conceptId} {
      allow read, list: if get(/databases/$(database)/documents/notebooks/$(notebookId)).data.visibility == 'public' || isNotebookOwner(notebookId);
    	allow create, update, delete: if isNotebookOwner(notebookId);
    }
    
    // PATTERNS
    match /patterns/{patternId} {
    	allow get, list: if true;
      allow create, update, delete: if false; // Managed by backend functions
    }
    
    // SESSIONS
    match /sessions/{sessionId} {
      allow read, create, update, delete: if isOwner(resource.data.userId);
      allow list: if false;
    }
    
    // LEDGER ENTRIES
    match /ledgerEntries/{entryId} {
       allow get: if isNotebookOwner(resource.data.notebookId);
       allow list, create, update, delete: if false; // Managed by backend functions
    }
    
    // ARTIFACTS
    match /artifacts/{artifactId} {
       allow get: if isNotebookOwner(resource.data.notebookId);
       allow list, create, update, delete: if false; // Managed by backend functions
    }

    // EVENTS
    match /events/{eventId} {
      allow create: if true;
      allow read, list, update, delete: if false;
    }
  }
}
