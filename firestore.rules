rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Notebooks
    match /notebooks/{notebookId} {
      allow read: if resource.data.visibility == 'public'
                  || (request.auth != null && request.auth.uid == resource.data.ownerId);

      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.ownerId;

      allow update, delete: if request.auth != null
                            && request.auth.uid == resource.data.ownerId;

      // Notes inside notebooks
      match /notes/{noteId} {
        allow read: if get(/databases/$(database)/documents/notebooks/$(notebookId)).data.visibility == 'public'
                    || (request.auth != null
                        && request.auth.uid == get(/databases/$(database)/documents/notebooks/$(notebookId)).data.ownerId);

        allow create: if request.auth != null
                      && request.auth.uid == get(/databases/$(database)/documents/notebooks/$(notebookId)).data.ownerId;

        allow update, delete: if request.auth != null
                              && request.auth.uid == get(/databases/$(database)/documents/notebooks/$(notebookId)).data.ownerId;
      }

      // Concepts inside notebooks
      match /concepts/{conceptId} {
        allow read: if get(/databases/$(database)/documents/notebooks/$(notebookId)).data.visibility == 'public'
                    || (request.auth != null
                        && request.auth.uid == get(/databases/$(database)/documents/notebooks/$(notebookId)).data.ownerId);

        allow write: if request.auth != null
                     && request.auth.uid == get(/databases/$(database)/documents/notebooks/$(notebookId)).data.ownerId;
      }
    }

    // Global patterns
    match /patterns/{patternId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Sessions
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Ledger entries – only owner can see (or via Functions)
    match /ledgerEntries/{entryId} {
      allow read, write: if request.auth != null
                         && request.auth.uid == resource.data.userId;
    }

    // Artifacts – only owner
    match /artifacts/{artifactId} {
      allow read, write: if request.auth != null
                         && request.auth.uid == resource.data.ownerId;
    }

    // Events (analytics) – writes via backend only.
    match /events/{eventId} {
      allow read: if request.auth != null && request.auth.token.admin == true;
      allow write: if false; // always via Functions
    }
  }
}